@model KGID_Models.NBApplication.VM_NomineeDetails
@using KGID_Models.NBApplication


<div class="row" id="divNominee">
    <div class="form-group col-12">
        <table id="tblNomineeDetails" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th><label class="knlan">ನಾಮ ನಿರ್ದಿಷ್ಠ ವ್ಯಕ್ತಿಯ ಹೆಸರು</label><label class="Enlan">Name of Nominee</label></th>
                    <th><label class="knlan">ನಾಮ ನಿರ್ದಿಷ್ಠ ವ್ಯಕ್ತಿಯ ವಯಸ್ಸು</label><label class="Enlan">Age of Nominee</label></th>
                    <th><label class="knlan">ಸಂಬಂಧ</label><label class="Enlan">Relation</label></th>
                    <th><label class="knlan">% ಶೇಕಡ</label><label class="Enlan">% Share</label></th>
                    <th>**contingencies on the<br /> happening of which the<br /> nomination shall<br /> become invalid</th>
                    <th>Name, address and<br />relationship of the<br /> person, if any, to<br /> whom the right of<br /> the nominee shall<br /> pass in the event of<br /> his predeceasing the<br /> Govt. employee</th>


                </tr>
            </thead>
            <tbody>
                @if (Model.NomineeDetails != null)
                {
                    int counter = 1;
                    foreach (var item in Model.NomineeDetails)
                    {
                <tr data-row-number="@counter">
                    <td>@item.NameOfNominee</td>
                    <td>@item.Age</td>
                    <td>@item.Relation</td>
                    <td class="val-share">@item.PercentageShare</td>
                    <td>@item.gnd_contingencies</td>
                    <td class="val-share">@item.gnd_predeceasing</td>


                </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">

    var table;
    $(document).ready(function () {
        if (!$.fn.dataTable.isDataTable('#tblNomineeDetails')) {
            table = $('#tblNomineeDetails').DataTable({
                paging: false,
                info: false,
                searching: false
            });
        }
    });
</script>
