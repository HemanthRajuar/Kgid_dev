@model KGID_Models.NBApplication.VM_NomineeDetails
@using KGID_Models.NBApplication

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>
<div class="row" id="divNominee">
    <div class="form-group col-12">
        @*<table id="tblNomineeDetails" class="table table-striped table-bordered" style="width:100%; color:black;">*@
        <table id="tblNomineeDetails" style="width:100%; Z">
            <thead>
                <tr>
                    <th style="vertical-align:top; border-width:thin;"><label class="knlan">ನಾಮ ನಿರ್ದಿಷ್ಠ ವ್ಯಕ್ತಿಯ ಹೆಸರು</label><label class="Enlan">Name of Nominee</label></th>
                    <th style="vertical-align:top; border-width:thin;"><label class="knlan">ನಾಮ ನಿರ್ದಿಷ್ಠ ವ್ಯಕ್ತಿಯ ವಯಸ್ಸು</label><label class="Enlan">Age of Nominee</label></th>
                    <th style="vertical-align:top; border-width:thin;"><label class="knlan">ಸಂಬಂಧ</label><label class="Enlan">Relation</label></th>
                    <th style="vertical-align:top; border-width:thin;"><label class="knlan">% ಶೇಕಡ</label><label class="Enlan">% Share</label></th>
                    <th style="vertical-align:top; border-width:thin;">**contingencies on the happening of which the nomination shall become invalid</th>
                    <th style="vertical-align:top; border-width:thin;">Name, address and relationship of the person, if any, to whom the right of the nominee shall pass in the event of his predeceasing the Govt. employee</th>


                </tr>
            </thead>
            <tbody>
                @if (Model.NomineeDetails != null)
                {
                    int counter = 1;
                    foreach (var item in Model.NomineeDetails)
                    {
                        <tr data-row-number="@counter">
                            <td>@item.NameOfNominee</td>
                            <td>@item.Age</td>
                            <td>@item.Relation</td>
                            <td class="val-share">@item.PercentageShare</td>
                            <td>@item.gnd_contingencies</td>
                            <td>@item.gnd_predeceasing</td>

                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">

    var table;
    $(document).ready(function () {
        if (!$.fn.dataTable.isDataTable('#tblNomineeDetails')) {
            table = $('#tblNomineeDetails').DataTable({
                paging: false,
                info: false,
                searching: false
            });
        }
    });
</script>
