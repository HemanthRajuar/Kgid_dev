<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"><b></b></h6>
            </div>
            <div class="card-body">
                <div id="DivDscData">
                    <div><h4>Application Mapping Details</h4></div>
                    <div class="form-group">
                        <table id="tblApplicationMappingDetails1" class="table table-striped table-bordered" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>Employe Name</th>
                                    <th style="display:none">Emp_Id</th>
                                    <th>Application Number</th>
                                    <th style="display:none">ApplicationId</th>
                                    <th>Verified By</th>
                                    <th>Assigned To</th>
                                    <th>Assignee Role</th>
                                    <th>Remarks</th>
                                    <th>Comments</th>
                                    <th>Application Status</th>
                                    <th>Update Assignee</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.ApplicationMappingDeatils != null)
                                {
                                    foreach (var item in ViewBag.ApplicationMappingDeatils)
                                    {
                                        
                                <tr>
                                    <td>@item.Employe_name</td>
                                    <td style="display:none">@item.Emp_Id</td>
                                    <td>@item.ApplicationNumber</td>
                                    <td style="display:none">@item.ApplicationId</td>
                                    <td>  @item.kawt_verifiedBy_Name
                                    @if (@item.kawt_verifiedBy_KgidNo != 0) { 
                                    <label value="">(@item.kawt_verifiedBy_KgidNo)</label>}
                                    </td>

                                    <td>@item.kawt_AssignedTo_Name
                                    @if (@item.kawt_AssignedTo_KgidNo != 0)
                                    {  <label value="">(@item.kawt_AssignedTo_KgidNo)</label>}</td>


                                    @if (item.kawt_application_status == 3 || item.kawt_application_status == 4)
                                    {
                                        <td> <label value="DDO">DDO</label></td>
                                    }
                                    else if (item.kawt_application_status == 5 || item.kawt_application_status == 6)
                                    {
                                        <td><label value="CAW">Case Worker</label></td>

                                    }
                                    else if (item.kawt_application_status == 7 || item.kawt_application_status == 8)
                                    {
                                        <td> <label value="SI">Superindent</label></td>
                                    }
                                    else if (item.kawt_application_status == 9 || item.kawt_application_status == 10 || item.kawt_application_status == 24)
                                    {
                                        <td> <label value="DIO">DIO</label></td>
                                    }
                                    else if (item.kawt_application_status == 11 || item.kawt_application_status == 12)
                                    {
                                        <td><label value="DD">Deputy Director</label></td>
                                    }
                                    else if (item.kawt_application_status == 13)
                                    {
                                        <td> <label value="D">Director</label></td>
                                    }
                                    else if (item.kawt_application_status == 16)
                                    {
                                        <td> <label value="AVG">AVG Case Worker</label></td>
                                    }


                                    @*<td>@item.kawt_remarks</td>*@
                                    <td>@item.kawt_remarks_discription</td>
                                    <td>@item.kawt_comments</td>
                                    @*<td style="display:none">@item.kawt_application_status</td>*@
                                    <td>@item.kawt_applStatus_discription</td>

                                    @*<td><input type="button" value="Search Employee" class="btn btn-primary" id="btnSearchEmployee" onclick="employeeSearchPopUp();" /></td>
        <td><input type="button" value="Update Assigned_to" class="btn btn-primary" id="btnUpdateAssignedTo" onclick="UpdateAssignedTo(@item.kawt_workflow_id);"  style="display:none" />*@

                                    <td>
                                        @*<a href="#" onclick="employeeSearchPopUp(@item.kawt_workflow_id);">Update </a>*@
                                        <input type="button" value="Update" class="btn btn-primary" onclick="employeeSearchPopUp(@item.kawt_workflow_id);" />
                                        <input type="hidden" id="hdnassignedEmplId" />
                                        <input type="hidden" id="hdnworkflowiD" />
                                    </td>
                                    @*<td>
            <a id="btnUpdateAssignedTo" onclick="UpdateAssignedTo(@item.kawt_workflow_id);" style="display:none"> Update </a>

        </td>*@

                                </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
                <br />
          

            </div>
        </div>
    </div>
</div>

