                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.WorkFlowDetails != null && Model.WorkFlowDetails.Count > 0)
                                        {
                                            foreach (var item in Model.WorkFlowDetails)
                                            {
                                                <tr>
                                                    @*<td>@item.ApplicationRefNo</td>*@
                                                    @*<td>@item.CreationDateTime</td>*@
